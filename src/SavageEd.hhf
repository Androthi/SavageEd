		IDM_PEG,       
		IDM_READONLY,
		IDM_SETTAB,
		IDM_TAB_AS_SPACE,
		IDM_AUTOINDENT,
		IDM_RECENTNEW,
		IDM_CLEAREXIT,
		IDM_OPENRECENT,
		IDM_REMEMBERPOS,
		IDM_VIEW_STATUS,
		IDM_ABOUT,
