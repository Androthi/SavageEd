type
	// Message and dispatch table related definitions:
	MsgProc_t:	procedure( hwin:dword; wParam:dword; lParam:dword );
	
	MsgProcPtr_t:
		record
			MessageValue	:dword;
			MessageHndlr	:MsgProc_t;			
		endrecord;
		
	range:
		record
			start_index	:uns32;
			end_index	:uns32;
		endrecord;

	LineBreak: enum {
		CRLF,
		LF
	};

	FindMode:
		record
			down		:boolean;
			wholeword	:boolean;
			matchcase	:boolean;
			matchpattern:boolean;
			specialcodes:boolean;
		endrecord;
	
	LineInfo:
		record
			number	:uns32;
			index	:uns32;
			length	:uns32;
		endrecord;

	InputInfo:
		record
			initial	:string;
			return	:string;
		endrecord;
	
	Edit_Node:
		record inherits (baseNode_t)
			filepath:string;
			old_proc:dword; // original window proc of edit control
			hred	:dword;
			
			// selection
			cursor				:range;
			column_index		:uns32;
			
			// line info of cursor, has number, index and length
			line				:LineInfo;
			lines				:uns32;
			mark_point			:uns32;
			mark				:boolean;
			word_wrap			:boolean;
			mode				:byte;
		endrecord;
	
	
	edit_mode	:enum {
		MODE_INSERT,
		MODE_OVER,
		MODE_EDITINI,
		MODE_VIEWDOCS

	};

	wnd_settings:
		record
			hinst		:dword;
			hwnd		:dword;
			hmenu		:dword;
			hstatus		:dword;
			hsubmenu	:dword;
			hcontextmenu:dword;
			hfind		:dword;
			hfont		:dword;
			habout		:dword;
			hredDLL		:dword;
			buffer_focus:pointer to Edit_Node;
			msg			:w.MSG;
			xPos		:uns32;
			yPos		:uns32;
			width		:uns32;
			height		:uns32;
			line_break	:LineBreak;
			find_mode	:FindMode;
			tabs		:uns32;

			// text and background colors
			textColor	:w.COLORREF;
			backColor	:w.COLORREF;
		endrecord;

	menu_items :enum {
		IDM_NEW,
