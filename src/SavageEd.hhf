		IDM_TO_LOWER,
		IDM_INCREASE_INDENT,
		IDM_DECREASE_INDENT,
		IDM_COPY_WORD,
		IDM_DELETE_WORD,
		IDM_KILL_LINE
	};

	rect_t:
	record
		union
			left	:uns32;
			x		:uns32;
		endunion;
		union
			top		:uns32;
			y		:uns32;
		endunion;
		union
			right	:uns32;
			width	:uns32;
		endunion;
		union
			bottom	:uns32;
			height	:uns32;
		endunion;
	endrecord;

